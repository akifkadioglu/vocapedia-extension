{
    "manifest_version": 3,
    "name": "Vocapedia Notifier",
    "version": "1.0",
    "description": "Welcome to the Vocapedia Extension! This extension sends the words of the desired chapter as a notification when you want.",
    "action": {
        "default_popup": "./index.html",
        "default_icon": "logo.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": [
        "tabs",
        "alarms",
        "notifications",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "logo.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}